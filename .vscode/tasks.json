{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Database - ‚ûï Add migration",
            "command": "dotnet-ef",
            "args": [
                "migrations",
                "add",
                "${input:migration_name}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pixel-overtime-api"
            }
        },
        {
            "label": "Database - ‚ûñ Remove migration",
            "command": "dotnet-ef",
            "args": [
                "migrations",
                "remove"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pixel-overtime-api"
            }
        },
        {
            "label": "Database - ‚¨áÔ∏è Apply migration",
            "command": "dotnet-ef",
            "args": [
                "database",
                "update"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pixel-overtime-api"
            }
        },

        {
            "label": "Godot - üèóÔ∏è Build",
            "command": "dotnet",
            "type": "process",
            "args": [
              "build",
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
              "echo": true,
              "reveal": "silent",
              "focus": false,
              "panel": "shared",
              "showReuseMessage": false,
              "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}/godot"
            }
        },

        {
            "label": "API - üèóÔ∏è Build",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pixel-overtime-api"
            }
        },

        {
            "label": "API - üåê Publish",
            "command": "dotnet",
            "args": [
                "publish"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pixel-overtime-api"
            }
        },
    ],
    "inputs": [
        {
            "id": "migration_name",
            "type": "promptString",
            "default": "Migration Name",
            "description": "Enter the name of the new migration"
        }
    ]
}